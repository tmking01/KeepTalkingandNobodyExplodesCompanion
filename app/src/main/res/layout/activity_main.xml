<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tmkin.keeptalkingandnobodyexplodescompanion.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/button"
        android:layout_width="206dp"
        android:layout_height="53dp"
        android:onClick="sendMessage"
        android:text="On the Subject of Wires "
        tools:layout_editor_absoluteY="192dp"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="371dp"
        android:layout_height="48dp"
        android:onClick="onbuttontap"
        android:text="@string/TapMe"
        android:visibility="visible"
        tools:layout_editor_absoluteY="517dp"
        tools:layout_editor_absoluteX="20dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="344dp"
        android:layout_height="27dp"
        android:text="Contains Vowel"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="112dp" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="344dp"
        android:layout_height="27dp"
        android:text="More than one battery"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="85dp" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="344dp"
        android:layout_height="28dp"
        android:checked="false"
        android:text="Even Serial Number"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="57dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="140dp"
        android:layout_height="41dp"
        android:text="Strike 1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="156dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:text="Strike 2"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="188dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="16dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="16dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="587dp"
        tools:layout_editor_absoluteY="-75dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>


